<UserControl
    x:Class="BeatSpy.UserControls.SearchControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BeatSpy.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:BeatSpy.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
    d:DesignHeight="96"
    d:DesignWidth="576"
    mc:Ignorable="d">
    <TextBox
        x:Name="Search"
        Width="320"
        Height="48"
        IsEnabled="{Binding IsLoggedIn}"
        PreviewKeyDown="OnSearchQueryPreviewKeyDown">
        <TextBox.Style>
            <Style TargetType="TextBox">
                <Setter Property="OverridesDefaultStyle" Value="True" />
                <Setter Property="CaretBrush" Value="{StaticResource clr-primary-100}" />
                <Setter Property="FontFamily" Value="{StaticResource font-normal}" />
                <Setter Property="FontSize" Value="{StaticResource text-sm}" />
                <Setter Property="Foreground" Value="{StaticResource clr-primary-100}" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                <Setter Property="Padding" Value="0,0,20,0" />
                <Setter Property="ContextMenu">
                    <Setter.Value>
                        <ContextMenu Style="{StaticResource ContextMenuStyle}">
                            <MenuItem
                                Command="Copy"
                                Header="Copy"
                                Style="{StaticResource MenuItemStyle}" />
                            <MenuItem
                                Command="Paste"
                                Header="Paste"
                                Style="{StaticResource MenuItemStyle}" />
                        </ContextMenu>
                    </Setter.Value>
                </Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border
                                Name="SearchBorder"
                                Background="Transparent"
                                BorderBrush="{StaticResource clr-primary-800}"
                                BorderThickness="1"
                                CornerRadius="12">
                                <Grid Margin="14,0">
                                    <ScrollViewer
                                        x:Name="PART_ContentHost"
                                        Focusable="False"
                                        HorizontalScrollBarVisibility="Hidden"
                                        VerticalScrollBarVisibility="Hidden" />

                                    <TextBlock
                                        Name="SearchText"
                                        Margin="2,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontFamily="{StaticResource font-normal}"
                                        FontSize="{StaticResource text-sm}"
                                        Foreground="{StaticResource clr-primary-600}"
                                        IsHitTestVisible="False"
                                        Text="What song do you want to explore today?">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Path=Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="Visibility" Value="Hidden" />
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsFocused" Value="False">
                        <Setter Property="Foreground" Value="{StaticResource clr-primary-600}" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </TextBox.Style>
    </TextBox>
</UserControl>
